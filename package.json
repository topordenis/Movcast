{
  "name": "electron-react-esbuild",
  "version": "0.0.0",
  "description": "An Electron boilerplate",
  "license": "MIT",
  "author": "sprout2000",
  "main": "dist/main.js",
  "scripts": {
    "dev": "rimraf dist && run-p dev:esbuild dev:electron",
    "build": "tsc && cross-env NODE_ENV=\"production\" ts-node ./esbuild.ts",
    "dev:esbuild": "cross-env NODE_ENV=\"development\" ts-node ./esbuild.ts",
    "dev:electron": "wait-on dist/main.js dist/index.html && electronmon .",
    "test": "jest"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@craftamap/esbuild-plugin-html": "^0.5.0",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "cross-env": "^7.0.3",
    "electron": "^22.1.0",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-search-devtools": "^1.8.8",
    "electronmon": "^2.0.2",
    "esbuild": "^0.17.5",
    "npm-run-all": "^4.1.5",
    "rimraf": "^4.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "wait-on": "^7.0.1"
  },
  "optionalDependencies": {
    "@jest/types": "^29.4.1",
    "@testing-library/dom": "^8.20.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.4.0",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.4.1",
    "ts-jest": "^29.0.5"
  }
}
