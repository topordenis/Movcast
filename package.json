{
  "name": "electron-react-esbuild",
  "version": "0.0.0",
  "description": "An Electron boilerplate",
  "license": "MIT",
  "author": "sprout2000",
  "main": "dist/main.js",
  "scripts": {
    "dev": "rimraf dist && run-p dev:esbuild dev:electron",
    "build": "tsc && cross-env NODE_ENV=\"production\" ts-node ./esbuild.ts",
    "dev:esbuild": "cross-env NODE_ENV=\"development\" ts-node ./esbuild.ts",
    "dev:electron": "wait-on dist/main.js dist/index.html && electronmon .",
    "test": "jest",
    "package": "ts-node ./builder.ts"
  },
  "electronmon": {
    "patterns": [
      "dist/**/*"
    ]
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@craftamap/esbuild-plugin-html": "^0.5.0",
    "@jest/types": "^29.5.0",
    "@testing-library/dom": "^9.2.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.33",
    "@types/react-dom": "^18.0.11",
    "@types/testing-library__jest-dom": "^5.14.5",
    "cross-env": "^7.0.3",
    "electron": "^24.0.0",
    "electron-builder": "^24.2.1",
    "electronmon": "^2.0.2",
    "esbuild": "^0.17.15",
    "esbuild-sass-plugin": "^2.8.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3",
    "wait-on": "^7.0.1"
  }
}
